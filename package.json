  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.9.1",
    "bootstrap": "^5.1.3",
    "canvas": "^2.9.1",
    "chart.js": "^3.7.1",
    "cookie_js": "^1.4.2",
    "i18next": "^21.6.14",
    "i18next-browser-languagedetector": "^6.1.4",
    "moment": "^2.26.0",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.2.2",
    "react-cookie-consent": "^7.3.1",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-i18next": "^11.16.2",
    "react-router-dom": "^6.3.0",
    "react-select": "^5.2.2",
    "react-social-login": "^3.4.15",
    "react-social-login-buttons": "3.1.0",
    "styled-components": "^5.3.5",
    "use-persisted-reducer": "^2.1.0",
    "workbox-core": "^6.5.2",
    "workbox-expiration": "^6.5.2",
    "workbox-precaching": "^6.5.2",
    "workbox-routing": "^6.5.2",
    "workbox-strategies": "^6.5.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "preinstall": "npx npm-force-resolutions",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "eject": "react-scripts eject",
    "target-lint": "./scripts/target-lint",
    "lint": "eslint \"./src/**/*.+(js|jsx)\" --max-warnings=0",
    "clean": "eslint --fix \"./src/**/*.+(js|jsx)\"; prettier --write \"./src/**/*.+(js|jsx|json|yml|yaml|css|scss|md|vue)\"",
    "coverage": "react-scripts test --env=jest-environment-jsdom-sixteen --coverage --coverageDirectory=coverage --watchAll=false"
  },
  "resolutions": {
    "simple-get": ">=4.0.1"
  },
  "jest": {
    "resetMocks": false,
    "coverageReporters": [
      "text",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "src/serviceWorker.js",
      "src/service-worker.js",
      "src/setupTests.js",
      "src/configuration/*",
      "src/test.fixtures/*",
      "src/providers/api/test.fixtures/*",
      ".hook.mock.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^8.12.0",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "firebase": "^9.6.10",
    "jest-canvas-mock": "^2.3.1",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "jest-styled-components": "^7.0.8",
    "mq-polyfill": "^1.1.8",
    "prettier": "^2.6.1",
    "react-scripts": "^4.0.3",
    "resize-observer-polyfill": "^1.5.1"
  }
}
